<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemSubLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundroundalpha"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    >

    <TextView
        android:id="@+id/itemTitle"
        style="@style/TextViewInter_bold20White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundroundblue"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingHorizontal="12dp"
        android:paddingVertical="2dp"
        android:text="Предмет" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemWeek"
            style="@style/TextViewInter_regular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Неделя" />

        <TextView
            android:id="@+id/itemDayOfWeek"
            style="@style/TextViewInter_regular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginout"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="День недели" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemRoom"
            style="@style/TextViewInter_regular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Аудитория" />

        <TextView
            android:id="@+id/itemType"
            style="@style/TextViewInter_regular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginout"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Практика" />
    </LinearLayout>


    <TextView
        android:id="@+id/itemTeacher"
        style="@style/TextViewInter_regular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Преподаватель" />


    <TextView
        android:id="@+id/itemTime"
        style="@style/TextViewInter_regular20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Время" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemCourse"
            style="@style/TextViewInter_regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Курс"
            android:textColor="@color/bluelight" />

        <TextView
            android:id="@+id/itemInstitute"
            style="@style/TextViewInter_regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginout"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Институт"
            android:textColor="@color/bluelight" />
    </LinearLayout>

    <TextView
        android:id="@+id/itemGroup"
        style="@style/TextViewInter_regular16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginout"
        android:layout_marginTop="@dimen/marginstandart"
        android:layout_marginBottom="@dimen/marginout"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Группа"
        android:textColor="@color/bluelight" />

</LinearLayout>
