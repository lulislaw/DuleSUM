<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegrey"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginout"
            android:layout_marginTop="@dimen/marginstandart"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/groupTv"
                        style="@style/TextViewInter_bold20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/marginstandart"
                        android:text="Группа" />

                    <TextView
                        android:id="@+id/weekTv"
                        style="@style/TextViewInter_semibold20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Неделя" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/calendarButton"
                        style="@style/ButtonCalendar"
                        android:layout_width="112dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dot1"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />

                        <ImageView
                            android:id="@+id/dot2"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />

                        <ImageView
                            android:id="@+id/dot3"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />

                        <ImageView
                            android:id="@+id/dot4"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />

                        <ImageView
                            android:id="@+id/dot5"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />

                        <ImageView
                            android:id="@+id/dot6"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />

                        <ImageView
                            android:id="@+id/dot7"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0"
                            android:foreground="@drawable/backgroundroundblue"
                            android:src="@android:drawable/alert_light_frame"
                            tools:srcCompat="@android:drawable/presence_invisible" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/ViewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</FrameLayout>