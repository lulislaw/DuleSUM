<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginout"
    android:background="@drawable/backgroundroundwhite"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/marginout"
    android:paddingVertical="@dimen/marginout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsTitle"
            style="@style/TextViewInter_bold20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="С заботой о природе: итоги проекта от компании «Ecoplatform»"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/newsMore"
            style="@style/TextViewInter_regular16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginstandart"
            android:text="Подробнее" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/backgroundroundbluelight"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/newsDate"
            style="@style/TextViewInter_regular16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginstandart"
            android:text=" Ср, 25 Янв 2023" />
    </LinearLayout>

</LinearLayout>